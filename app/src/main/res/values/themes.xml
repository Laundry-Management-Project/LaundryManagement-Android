<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Laundry_management" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="edit_text_style" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:layout_height">@dimen/dimen_text_filed_height_dp</item>
        <item name="android:textSize">@dimen/dimen_text_size_sp</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>
    <style name="btn_style" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:layout_height">@dimen/dimen_btn_height_dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_Style" parent="text_Style_">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="text_Style_" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="title_text_style" parent = "text_Style_">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">20dp</item>
    </style>

</resources>